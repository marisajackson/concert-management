#add-employee-form
  %h3 Add Employee
  = simple_form_for @employee, :as => @employee, :url => invitation_path(@employee), remote: true, :html => {:method => :post} do |f|
    -# = devise_error_messages!
    = f.input :email, required: true
    = f.input :first_name, required: true
    .form-actions
      %button#cancel-employee-form.cancel Cancel
      = f.button :submit, "Add Employee"
