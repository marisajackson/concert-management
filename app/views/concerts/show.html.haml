= render 'layouts/header'

#dashboard
  #concert-summary
    #concert-container
      = render 'concerts/stats'
      
  #finances
    #expense-column
      #concert-expenses
        #section-header
          %h3 Expenses
          =link_to "Add", new_concert_expense_path(@concert), class: 'button', remote: true
        #expenses-container.section-container
          = render partial: 'expenses/index'

    #incomes-column
      #concert-incomes
        #section-header
          %h3 Incomes
          =link_to "Add", new_concert_income_path(@concert), class: 'button', remote: true
        #incomes-container.section-container
          = render 'incomes/index'
